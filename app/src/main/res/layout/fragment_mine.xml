<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_color"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.example.huangjiahao.qianjiangweather.view.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_middle"
                android:src="@drawable/icon_moren_wode"
                app:border_color="@color/green_color"
                app:border_width="2dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_mine_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_tiny1"
            android:text="hovey"
            android:textColor="@color/white"
            android:textSize="@dimen/text_font_big"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_marginTop="@dimen/margin_little"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_little"
                android:background="@color/line_gray"/>

            <RelativeLayout
                android:id="@+id/rl_suggestion_mine"
                android:layout_margin="@dimen/margin_tiny1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_huge">
                <ImageView
                    android:id="@+id/iv_suggestion_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_large"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_yijian_wode"
                    android:layout_marginLeft="@dimen/margin_big"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_middle"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_suggestion_mine"
                    android:text="意见反馈"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/margin_little"
                    android:src="@drawable/icon_you"/>
            </RelativeLayout>

            <View
                android:layout_marginLeft="@dimen/margin_little"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_little"
                android:background="@color/line_gray"/>

            <RelativeLayout
                android:id="@+id/rl_setting_mine"
                android:layout_margin="@dimen/margin_tiny1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_huge">
                <ImageView
                    android:id="@+id/iv_setting_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_large"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_shezhi_wode"
                    android:layout_marginLeft="@dimen/margin_big"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_middle"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_setting_mine"
                    android:text="设置"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/margin_little"
                    android:src="@drawable/icon_you"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_little"
                android:background="@color/line_gray"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
